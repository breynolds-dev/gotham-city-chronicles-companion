{
  "name": "gotham-city-chronicles-companion",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "cz": "git-cz",
    "commitlint:check": "npx commitlint --from HEAD1 --to HEAD --verbose",
    "commitlint": "commitlint -e $GIT_PARAMS"
  },
  "dependencies": {
    "@swc/helpers": "~0.4.11",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@nrwl/eslint-plugin-nx": "^15.4.2",
    "@nrwl/expo": "^15.4.2",
    "@nrwl/jest": "15.4.2",
    "@nrwl/nx": "^7.8.7",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/workspace": "15.4.2",
    "@swc/cli": "~0.1.59",
    "@swc/core": "^1.3.24",
    "@swc/jest": "0.2.20",
    "@types/jest": "28.1.1",
    "@types/node": "16.11.7",
    "commitizen": "4.2.4",
    "commitizen-emoji": "1.0.5",
    "commitlint-config-gitmoji": "2.2.6",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-universe": "^11.1.1",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "husky": "^8.0.2",
    "jest": "28.1.1",
    "jest-environment-jsdom": "28.1.1",
    "nx": "15.4.1",
    "prettier": "^2.8.1",
    "ts-jest": "28.0.5",
    "ts-node": "10.9.1",
    "typescript": "~4.8.2"
  },
  "packageManager": "yarn@3.3.1",
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "header-min-length": [
        1,
        "always",
        30
      ],
      "header-max-length": [
        1,
        "always",
        200
      ],
      "scope-max-length": [
        1,
        "always",
        20
      ],
      "scope-case": [
        2,
        "always",
        [
          "lower-case",
          "pascal-case"
        ]
      ]
    }
  }
}
